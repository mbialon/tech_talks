<h2><%= @talk.title %></h2>
<p class="smallfont"> Stworzony przez: <%= @talk.user.email %> w dniu: <%= trimDate(@talk.created_at) %></p>
<p>Opis:<p>
<p><%= render_markdown(@talk.abstract) %></p>
<% if user_signed_in? && @talk.user == current_user %>
  <p>
    <%= link_to 'Edit', edit_talk_path(@talk) %>
    |
    <%= link_to 'Destroy', talk_path(@talk), :confirm => "Are you sure?", :method => :delete %>
  </p>
<% end %>

<%= link_to 'New comment', new_talk_comment_path(@talk) %>


<% if user_signed_in? %>
	<%= render 'shared/attachment_form' %>
	<%= link_to "Zapisz sie", new_talk_attendance_path(@talk) %> 
<% end %>

<% unless @talk.users.empty? %>
	<p>Attendant users:</p> 
	<table>
		<%= render @users %>
	</table> 
	<%= will_paginate @users, :param_name => :users_page%>
<% end %>

<% unless @talk.attachments.empty? %>
	<p>Attachements:</p> 
	<ul>
		<%= render @attachments%>
	</ul> 
	<%= will_paginate @attachments, :param_name => :attachments_page  %>
<% end %>


<% unless @talk.comments.empty? %>
<p>Comments:</p>
	<table>
	<%= render @comments %>
	</table>
	<%= will_paginate @comments,:param_name => :comments_page %>
	<% end %>
